<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema escuro -->
    <style name="Theme.MeuBalanco" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Ícones claros -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Cores principais (versão dark) -->
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>

        <!-- Fundo e superfícies -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorOnSurface">@android:color/white</item>

        <!-- Componentes -->
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <item name="materialButtonStyle">@style/ButtonStyle.Dark</item>
    </style>

    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="strokeColor">@color/divider_dark</item>
    </style>

    <style name="ButtonStyle.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="android:textColor">@color/text_on_accent</item>
    </style>
</resources>